{
    "version": "1.0.0-rc",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "repository": {
        "url": "https://github.com/salcrom/salcrom-product-card.git",
        "type": "git"
    },
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests",
        "test:watch": "tsdx test --watch",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "salcrom-product-card",
    "author": "salcrom",
    "module": "dist/salcrom-product-card.esm.js",
    "size-limit": [
        {
            "path": "dist/salcrom-product-card.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/salcrom-product-card.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@babel/preset-env": "^7.16.8",
        "@babel/preset-react": "^7.16.7",
        "@rollup/plugin-image": "^2.1.1",
        "@size-limit/preset-small-lib": "^7.0.5",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "@types/react-test-renderer": "^17.0.1",
        "babel-jest": "^27.4.6",
        "husky": "^7.0.4",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^25.5.4",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-test-renderer": "^17.0.2",
        "rollup-plugin-postcss": "^4.0.2",
        "size-limit": "^7.0.5",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^3.9.10"
    },
    "keywords": [
        "product",
        "card",
        "sergio",
        "alcantara"
    ],
    "jest": {
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
            "\\.(css|less|scss|sass)$": "identity-obj-proxy"
        }
    }
}
